                            <Button Style="{DynamicResource circlebutton}" Content="" 
                                    FontSize="10" Foreground="white" BorderThickness="0" 
                                    Height="15" Width="15" HorizontalAlignment="Right" Margin="10" 
                                    Background="red" Click="Shutdown_app"/>
                        </Grid>
                    </Border>
                </StackPanel>
                <StackPanel Grid.Row="1"  Margin="10, 20, 10, 0">
                    <Border CornerRadius="12" Background="#0D1B2A" Height="80">
                        <Grid>
                            <TextBlock Text="Timer Area" Foreground="White" 
                                       Padding="10"/>
                        </Grid>
                    </Border>
                </StackPanel>
                <StackPanel Grid.Row="2"  Margin="10, 10, 10, 0">
                    
                    <Border CornerRadius="12" Background="#0D1B2A" Height="250">
                        
                        <Grid>
                            <Border Height="20" Width="50" Margin="0 -221 0 5" CornerRadius="0 12 0 6" Background="#fb8500" HorizontalAlignment="Right">
                                <Button Style="{DynamicResource OneCornerRounded}" Content="sort" FontSize="12" 
                                        Foreground="white" BorderThickness="0" 
                                        Height="20" Width="50" HorizontalAlignment="Right" 
                                        Background="#fb8500" Click="Sort_deadline_list"/>
                            </Border>
                            <ListBox x:Name="DeadlinesList" Margin="10 20 10 10" MouseDoubleClick="ListBoxItem_DoubleClick" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="14" d:ItemsSource="{d:SampleData ItemCount=5}" />
                        </Grid>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="3"  Margin="10, 10, 10, 0">
                    
                    <Border CornerRadius="12" Background="#0D1B2A" Height="180">
                        <Grid>
                            <Grid Grid.Row="0" Height="130" VerticalAlignment="Top">
                                <Border BorderThickness="3,3,3,3" CornerRadius="10" Width="265" Height="110" VerticalAlignment="Top" Margin="0 8 0 0">
                                    <Border.BorderBrush>
                                        <DrawingBrush Viewport="0,0,10,10" ViewportUnits="Absolute" TileMode="Tile">
                                            <DrawingBrush.Drawing>
                                                <DrawingGroup>
                                                    <GeometryDrawing Brush="#1b263b">
                                                        <GeometryDrawing.Geometry>
                                                            <GeometryGroup>
                                                                <RectangleGeometry Rect="0,0,50,50" />
                                                                <RectangleGeometry Rect="50,50,50,50" />
                                                            </GeometryGroup>
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>
                                                </DrawingGroup>
                                            </DrawingBrush.Drawing>
                                        </DrawingBrush>
                                    </Border.BorderBrush>

                                    <TextBox Text="Content Goes Here!" Margin="5" Foreground="White" Background="Transparent" FontSize="16" x:Name="DeadlineText" BorderThickness="0" TextWrapping="Wrap"/>

                                </Border>
                            </Grid>
                            <Grid Grid.Row="1" VerticalAlignment="Bottom" Width="260">
                                <Grid Grid.Row="0">
                                    <Viewbox HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="-8 0 0 8" Height="60" Width="60">
                                        <DatePicker  Width="30" BorderThickness="0" x:Name="DeadLineDate">
                                            <DatePicker.CalendarStyle>
                                                <Style TargetType="Calendar" >
                                                    <Style.Resources>
                                                        <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="Red" />
                                                        <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="Green" />
                                                    </Style.Resources>
                                                </Style>
                                            </DatePicker.CalendarStyle>
                                        </DatePicker>
                                    </Viewbox>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Border CornerRadius="12" Background="DarkRed" Width="210" Height="42" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 0 10">
                                        <Button Style="{DynamicResource ButtonStyle1}" Width="210" Height="42" Content=" Add Deadline " Background="Transparent" Foreground="White" 
                                                BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"
                                                Click="Add_Deadline" />
                                    </Border>
                                </Grid>
                                
                            </Grid>
                        </Grid>
                    </Border>
                    
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
