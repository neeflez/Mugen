            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="600"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="56"/>
                    <RowDefinition Height="480"/>
                    <RowDefinition Height="64"/>
                </Grid.RowDefinitions>
                <Grid x:Name="grdHeader" PreviewMouseLeftButtonDown="grdHeader_PreviewMouseLeftButtonDown" IsHitTestVisible="True" Background="Transparent">

                    <TextBlock Text="Mugen"
                               Width="900"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Left"
                               Foreground="White"
                               FontSize="22"
                               Padding="20 20 20 0"/>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="1" Margin="10">
                    <StackPanel x:Name="tileStackPanel">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="Margin" Value="10 10 0 0"/>
                                <Setter Property="Width" Value="180"/>
                                <Setter Property="Height" Value="180"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="CornerRadius" Value="12"/>
                            </Style>
                        </StackPanel.Resources>
                        <Grid>
                            <Grid Grid.Column="1" Grid.Row="0" Width="190" HorizontalAlignment="Left" x:Name="Tile1" Visibility="Collapsed">
                                <Border>
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                            <GradientStop Color="#3aa0ff" Offset="0.0"/>
                                            <GradientStop Color="#1f7a8c" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Grid>
                                        <StackPanel>
                                            <Grid>
                                                <Grid Grid.Row="0" Grid.Column="0">
                                                    <TextBlock Text="Task" FontSize="28" Margin="12" Width="120" HorizontalAlignment="Left" 
                                                                Foreground="white" x:Name="TaskText1"/>
                                                </Grid>
                                                <Grid  Grid.Row="0" Grid.Column="1">
                                                    <Button Style="{DynamicResource RoundedCorners}" Content="Delete" Width="42" 
                                                            Background="#3aafff" Foreground="White" BorderThickness="0" 
                                                            HorizontalAlignment="Right" VerticalAlignment="Top"
                                                            Margin="10 10 10 10" x:Name="Delete1" 
                                                            Click="DeleteTile"/>


                                                </Grid>
                                            </Grid>
                                            <TextBlock Text="Description" FontSize="16" Margin="12 0 0 0" 
                                                   Foreground="#E0E1DD" x:Name="DescriptionText1"/>
                                        </StackPanel>

                                    </Grid>
                                </Border>
                            </Grid>
                            <Grid Grid.Column="1" Grid.Row="0" Width="190" x:Name="Tile2" Visibility="Collapsed">
                                <Border>
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                            <GradientStop Color="#fca311" Offset="0.0"/>
                                            <GradientStop Color="#f2c078" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Grid>
                                        <StackPanel>
                                            <Grid>
                                                <Grid Grid.Row="0" Grid.Column="0">
                                                    <TextBlock Text="Task" FontSize="28" Margin="12" Width="120" HorizontalAlignment="Left"
                                               Foreground="white" x:Name="TaskText2"/>
                                                </Grid>
                                                <Grid  Grid.Row="0" Grid.Column="1">
                                                    <Button Style="{DynamicResource RoundedCorners}" Content="Delete" Width="42" 
                                                            Background="#f28f3b" Foreground="White" BorderThickness="0" 
                                                            HorizontalAlignment="Right" VerticalAlignment="Top"
                                                            Margin="10 10 10 10" x:Name="Delete2" Click="DeleteTile"/>
                                                </Grid>
                                            </Grid>
                                            <TextBlock Text="Description" FontSize="16" Margin="12 0 0 0" 
