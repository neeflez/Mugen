<Window x:Class="Mugen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mugen"
        mc:Ignorable="d"
        Height="600" Width="900"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        xmlns:viewModel="clr-namespace:Mugen.NVVM.ViewModel">
    <!--KURWA TU ZLE WPISALEM WCZESNIEJ ZAMIAST MAINVIEWMODEL TO HOMEVIEWMODEL!-->
    <Window.DataContext>
        
        <viewModel:MainViewModel/> 
    </Window.DataContext>
    <Border Background="#1b263b" CornerRadius="12">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="600"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="56"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Text="Mugen"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="22"
                       Padding="20 20 20 0"/>

                <ContentControl Grid.Row="1"
                                Grid.Column="1"
                                Margin="10"/>
                <ContentControl Grid.Row="1"
                Grid.Column="1"
                Content="{Binding CurrentView}"/>
            </Grid>


            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="110"/>
                    <RowDefinition Height="290"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"  Margin="10, 10, 10, 0">
                    <Border CornerRadius="12" Background="#0D1B2A" Height="100">
                        <Grid>
                            <TextBlock Text="Timer Area" Foreground="White" 
                                       Padding="10"/>
                        </Grid>
                    </Border>
                </StackPanel>
                <StackPanel Grid.Row="1"  Margin="10, 10, 10, 0">
                    <Border CornerRadius="12" Background="#0D1B2A" Height="280">
                        <Grid>
                            <TextBlock Text="Deadlines List" Foreground="White" 
                       Padding="10"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="2"  Margin="10, 10, 10, 0">
                    <Border CornerRadius="12" Background="#0D1B2A" Height="180">
                        <Grid>
                            <TextBlock Text="DragDrop Area" Foreground="White" 
                                       Padding="10"/>
                        </Grid>
                    </Border>
                </StackPanel>
                
            </Grid>
        </Grid>
    </Border>
</Window>
